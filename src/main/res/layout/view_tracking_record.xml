<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/local_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/duration_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_duration"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/time_frame_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/from_date_to_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toRightOf="@id/duration_line"
            android:layout_alignBaseline="@id/duration_line"
            android:gravity="right"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/sample_tracking_record_log"
        android:layout_gravity="left" />

</LinearLayout>