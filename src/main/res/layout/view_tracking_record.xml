<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/time_frame_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder_tracking_record_time_frame"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/duration_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder_tracking_record_duration"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="left" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder_tracking_record_description"
        android:layout_gravity="left" />

</LinearLayout>