<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:orientation="vertical">

    <fragment class="com.tastybug.timetracker.gui.fragment.trackingrecord.log.TrackingLogStatisticsFragment"
        android:id="@id/fragment_project_tracking_log_statistics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"  />

    <fragment class="com.tastybug.timetracker.gui.fragment.trackingrecord.list.TrackingRecordListFragment"
        android:id="@id/fragment_project_tracking_log"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"  />

</LinearLayout>