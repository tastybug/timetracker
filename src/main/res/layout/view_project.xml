<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_project_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/project_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_tracking_record_summary"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/project_last_tracking_record_summary" />

    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trackingStartStop"
        android:src="@drawable/ic_start_tracking"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/project_amount_meter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trackingStartStop"
        android:orientation="horizontal">

        <View
            android:id="@+id/project_amount_meter_1"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="95"
            android:background="@android:color/holo_blue_bright"/>

        <View
            android:id="@+id/project_amount_meter_2"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="5"
            android:background="@android:color/holo_red_dark"/>

    </LinearLayout>



</RelativeLayout>