<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/project_info_time_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_remaining_days_X_until_Y"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/project_info_current_project_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/X_recorded_hours_so_far_from_a_total_of_Y"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>