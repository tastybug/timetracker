<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment class="com.tastybug.timetracker.gui.fragment.project.configuration.ProjectConfigurationFragment"
            android:id="@id/fragment_project_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_project_configuration" />

        <fragment class="com.tastybug.timetracker.gui.fragment.project.configuration.TrackingConfigurationFragment"
            android:id="@id/fragment_tracking_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_tracking_configuration" />

    </LinearLayout>

</ScrollView>