<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_project_title"
        android:padding="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/separator_1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@id/project_title"/>

    <TextView
        android:id="@+id/project_info_time_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/project_remaining_days_X_until_Y"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/separator_1"/>

    <TextView
        android:id="@+id/project_info_current_project_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/X_recorded_hours_so_far_from_a_total_of_Y"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/project_info_time_frame" />

</RelativeLayout>